<h1>Hi, <%= @user.first_name %>!</h1>


<div class="user_details">
  City: <%= @user.city %><br>
  Age: <%= @user.age %><br>
  Weight: <%= @user.weight %><br>
</div>

<% if @user == current_user %>
  <p><%= link_to 'Logout', logout_path, method: :delete %><p>
    <% else %>
    <p> <%= link_to 'Login', login_path %> </p>
    <% end %>

<%= link_to 'Add an activity', new_entry_path %>

<% if current_user.admin %>
  <%= link_to "Admin Dashboard", admin_user_path %>
<% end %>

<div id="chartContainer"><%= @chart.render() %></div>

<div class="user_timeline">
  <h2> <%= "#{@user.first_name}'s activity posts: "%></h2>
  <% @user.activity_entries.each do |act| %>
    <br><hr><br>
    Activity: <%= act.name %><br>
    Calories Burned: <%= act.calories_burned %><br>
    Workout date: <%= act.created_at %><br>
  <% end %>
</div>

<div class="user_challenges">
  <h2> <%= "Your challenges: "%></h2>
  <% @user.challenges.each do |challenge| %>
    <br><hr><br>
    Challenge name: <%=  link_to challenge.name, challenge_path(challenge) %><br>
    Challenge starts: <%= challenge.start_date %><br>
    Challenge ends: <%= challenge.end_date %><br>
  <% end  %>
</div>
